        },
        "endTime": {
          "description": "结束时间",
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Interaction": {
      "title": "Interaction",
      "type": "object",
      "properties": {
        "target": {
          "description": "目标id",
          "type": "string"
        },
        "targetType": {
          "description": "目标类型",
          "type": "integer",

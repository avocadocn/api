              "type": "array",
              "items": {
                "$ref": "Interaction"
              }
            }
          },
          "default": {
            "description": "error",
            "schema": {
              "$ref": "Error"
            }
          }
        }
      }
    },
    "/interaction/activity": {
      "post": {
        "tags": [
